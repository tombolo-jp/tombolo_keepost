<?xml version="1.0" encoding="UTF-8"?>
<!--
  KeePost SPA Routing Configuration for IIS
  このファイルは、IISサーバーでSPAルーティングを適切に処理するための設定です
-->
<configuration>
  <system.webServer>
    <!-- URLリライトルール -->
    <rewrite>
      <rules>
        <!-- KeePost SPAルーティングルール -->
        <rule name="KeePost SPA Routes" stopProcessing="true">
          <!-- /keepost/配下のリクエストのみ処理 -->
          <match url="^keepost/.*" />
          <!-- 実在するファイルやディレクトリは除外 -->
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <!-- index.htmlにリライト -->
          <action type="Rewrite" url="/keepost/index.html" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- 静的コンテンツの設定 -->
    <staticContent>
      <!-- MIMEタイプの設定 -->
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <remove fileExtension=".woff" />
      <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
      <remove fileExtension=".woff2" />
      <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
      <remove fileExtension=".svg" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      
      <!-- キャッシュ設定 -->
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="365.00:00:00" />
    </staticContent>
    
    <!-- HTTPレスポンスヘッダー -->
    <httpProtocol>
      <customHeaders>
        <!-- セキュリティヘッダー -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        
        <!-- キャッシュコントロール（HTML） -->
        <add name="Cache-Control" value="no-cache, no-store, must-revalidate" />
        <add name="Pragma" value="no-cache" />
        <add name="Expires" value="0" />
      </customHeaders>
    </httpProtocol>
    
    <!-- gzip圧縮 -->
    <httpCompression>
      <dynamicTypes>
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
        <add mimeType="text/css" enabled="true" />
        <add mimeType="text/html" enabled="true" />
        <add mimeType="image/svg+xml" enabled="true" />
      </dynamicTypes>
      <staticTypes>
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
        <add mimeType="text/css" enabled="true" />
        <add mimeType="text/html" enabled="true" />
        <add mimeType="image/svg+xml" enabled="true" />
      </staticTypes>
    </httpCompression>
    
    <!-- エラーページ設定（オプション） -->
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <!-- 404エラー時もindex.htmlを返す -->
      <remove statusCode="404" />
      <error statusCode="404" path="/keepost/index.html" responseMode="ExecuteURL" />
    </httpErrors>
  </system.webServer>
  
  <!-- アプリケーション設定 -->
  <location path="keepost">
    <system.webServer>
      <!-- ディレクトリブラウジングを無効化 -->
      <directoryBrowse enabled="false" />
      
      <!-- デフォルトドキュメント -->
      <defaultDocument>
        <files>
          <clear />
          <add value="index.html" />
        </files>
      </defaultDocument>
    </system.webServer>
  </location>
</configuration>